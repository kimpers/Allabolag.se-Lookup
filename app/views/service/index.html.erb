<h1>Allabolag.se Lookup</h1>
<%= form_tag('/results', method: 'post') do %>
    <%= label_tag(:company_name, 'Search for:') %>
    <%= text_field_tag(:company_name) %>
    <%= select_tag(:output_format, options_for_select([['Plain text', 'text'],['JSON format', 'json'],['XML format', 'xml']])) %>
    <%= submit_tag('Search') %>
<% end %>
